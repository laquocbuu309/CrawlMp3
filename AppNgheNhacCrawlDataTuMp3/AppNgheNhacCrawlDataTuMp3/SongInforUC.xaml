<UserControl x:Class="AppNgheNhacCrawlDataTuMp3.SongInforUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppNgheNhacCrawlDataTuMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Height="50">
            <Button x:Name="btnBack" Click="btnBack_Click">Back</Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Height="0" Width="0">
                <MediaElement x:Name="mdAudio" Source="{Binding SavePath}" MediaOpened="MdAudio_MediaOpened"></MediaElement>
            </Grid>
            <Grid Grid.Row="1">
                <Image Source="{Binding PhotoURL}"></Image>
            </Grid>
            <Grid Grid.Row="2">
                <Slider x:Name="sdDuration" PreviewMouseDown="SdDuration_PreviewMouseDown"  PreviewMouseUp="SdDuration_PreviewMouseUp" HorizontalAlignment="Stretch" ValueChanged="SdDuration_ValueChanged"></Slider>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Border BorderThickness="1" BorderBrush="Red">
                <ScrollViewer>
                    <TextBlock Text="{Binding Lydric}"></TextBlock>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
